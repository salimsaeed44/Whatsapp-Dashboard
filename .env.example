# Environment Variables Template
# Copy this file to .env and fill in the actual values
# Never commit .env to the repository

# Database Configuration
POSTGRES_URL=postgresql://user:password@localhost:5432/whatsapp_db
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# WhatsApp Cloud API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Botpress Configuration
BOTPRESS_URL=https://your-botpress-instance.com
BOTPRESS_API_KEY=your_botpress_api_key_here

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_PORT=5173

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
